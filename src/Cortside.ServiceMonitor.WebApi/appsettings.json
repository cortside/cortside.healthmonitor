{
    "AllowedHosts": "*",
    "Service": {
        "Name": "servicemonitor-api"
    },
    "Serilog": {
        "Using": [
            "Serilog.Sinks.ApplicationInsights",
            "Serilog.Sinks.Seq",
            "Serilog.Sinks.Console",
            "Serilog.Settings.Configuration"
        ],
        "MinimumLevel": {
            "Default": "Debug",
            "Override": {
                "Microsoft": "Warning",
                "Microsoft.AspNetCore.Mvc.Internal": "Warning",
                "System": "Information",
                "Cortside.Health.HealthCheckHostedService": "Warning",
                "Cortside.Health.Checks": "Warning",
            }
        },
        "WriteTo": [
            {
                "Name": "Console",
                "Args": {
                    "theme": "Serilog.Sinks.SystemConsole.Themes.AnsiConsoleTheme::Code, Serilog.Sinks.Console",
                    "outputServiceMonitor": "[{Timestamp:HH:mm:ss} {Level:u3}] [{CorrelationId}][{RequestId}] {Message:lj}{NewLine}{Exception}"
                }
            },
            {
                "Name": "ApplicationInsights",
                "Args": {
                    "restrictedToMinimumLevel": "Debug",
                    "telemetryConverter": "Serilog.Sinks.ApplicationInsights.Sinks.ApplicationInsights.TelemetryConverters.TraceTelemetryConverter, Serilog.Sinks.ApplicationInsights"
                }
            }
        ],
        "Enrich": [
            "FromLogContext",
            "WithMachineName",
            "WithEnvironmentUserName",
            "WithThreadId",
            "WithEventType"
        ],
        "Properties": {
            "Application": "ServiceMonitor-api"
        }
    },
    "HealthCheckHostedService": {
        "Name": "{{Service:Name}}",
        "Enabled": true,
        "Interval": 5,
        "CacheDuration": 30,
        "Checks": [
            {
                "Name": "ServiceMonitor-db",
                "Type": "dbcontext",
                "Required": true,
                "Interval": 30,
                "Timeout": 5
            },
            {
                "Name": "policyserver",
                "Type": "url",
                "Required": false,
                "Value": "{{PolicyServer:PolicyServerUrl}}/health",
                "Interval": 30,
                "Timeout": 5
            },
            {
                "Name": "identityserver",
                "Type": "url",
                "Required": false,
                "Value": "{{IdentityServer:Authority}}/api/health",
                "Interval": 30,
                "Timeout": 5
            },
            {
                "Name": "example",
                "Type": "example",
                "Required": false,
                "Interval": 30,
                "Timeout": 5
            }
        ]
    },
    "ExampleHostedService": {
        "Enabled": true,
        "Interval": 60
    },
    "ServiceMonitor": {
        "ConnectionString": "Data Source=localhost;Initial Catalog=ServiceMonitor;Integrated Security=True"
    },
    "ServiceBus": {
        "Protocol": "amqp",
        "Namespace": "localhost",
        "Policy": "admin",
        "Key": "password",
        "AppName": "ServiceMonitor.receiver",
        "Queue": "ServiceMonitor.local.queue",
        "Exchange": "/exchange/ServiceMonitor.local.exchange/",
        "Credits": 1
    },
    "IdentityServer": {
        "Authority": "https://identityserver",
        "ApiName": "ServiceMonitor",
        "ApiSecret": "secret",
        "RequireHttpsMetadata": true,
        "BaseUrl": "https://identityserver/connect/token",
        "Headers": {
            "Cache-Control": "no-cache",
            "PostmanToken": "72da23c4-87a0-4559-a76a-46b6e0be8de1"
        },
        "RequestBodyParams": [
            {
                "Name": "grant_type",
                "Value": "client_credentials"
            },
            {
                "Name": "scope",
                "Value": "policyserver.runtime user-api common.communications"
            },
            {
                "Name": "client_id",
                "Value": "ServiceMonitor-api"
            },
            {
                "Name": "client_secret",
                "Value": "secret"
            }
        ]
    },
    "ApplicationInsights": {
        "InstrumentationKey": "",
        "EndpointAddress": "https://dc.services.visualstudio.com/v2/track"
    },
    "Seq": {
        "ServerUrl": "http://localhost:5341"
    },
    "PolicyServer": {
        "CacheDuration": "0.00:05:00",
        "BasePolicy": "ServiceMonitor",
        "PolicyServerUrl": "http://policyserver",
        "TokenClient": {
            "Authority": "http://identityserver",
            "ClientId": "ServiceMonitor",
            "ClientSecret": "secret"
        },
        "BasePolicyPrefix": "ServiceMonitor"
    },
    "TimedServices": {
        "AmqpReconnectInterval": 60000
    },
    "ReceiverHostedService": {
        "Disabled": false,
        "TimedInterval": 60000
    },
    "Cors": {
        "Origins": [
            "http://*.cortside.local",
            "https://*.cortside.com"
        ]
    }
}

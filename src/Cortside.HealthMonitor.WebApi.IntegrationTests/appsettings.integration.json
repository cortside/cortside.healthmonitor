{
    "AllowedHosts": "*",
    "Service": {
        "Name": "HealthMonitor-api"
    },
    "Serilog": {
        "Using": [
            "Serilog.Sinks.ApplicationInsights",
            "Serilog.Sinks.Seq",
            "Serilog.Sinks.Console",
            "Serilog.Settings.Configuration"
        ],
        "MinimumLevel": {
            "Default": "Debug",
            "Override": {
                "Microsoft": "Warning",
                "Microsoft.AspNetCore.Mvc.Internal": "Warning",
                "Microsoft.EntityFrameworkCore": "Information",
                "System": "Information",
                "Cortside.HealthMonitor.WebApi.HostedServices": "Information",
                "Cortside.Common.DomainEvent.DomainEventComms": "Verbose",
                "Cortside.HealthMonitor.DomainService.HealthMonitorService": "Verbose"
            }
        },
        "WriteTo": [
            {
                "Name": "Console",
                "Args": {
                    "theme": "Serilog.Sinks.SystemConsole.Themes.AnsiConsoleTheme::Code, Serilog.Sinks.Console",
                    "outputHealthMonitor": "[{Timestamp:HH:mm:ss} {Level:u3}] [{CorrelationId}][{RequestId}] {Message:lj}{NewLine}{Exception}"
                }
            },
            {
                "Name": "ApplicationInsights",
                "Args": {
                    "restrictedToMinimumLevel": "Debug",
                    "telemetryConverter": "Serilog.Sinks.ApplicationInsights.Sinks.ApplicationInsights.TelemetryConverters.TraceTelemetryConverter, Serilog.Sinks.ApplicationInsights"
                }
            }
        ],
        "Enrich": [
            "FromLogContext",
            "WithMachineName",
            "WithEnvironmentUserName",
            "WithThreadId",
            "WithEventType"
        ],
        "Properties": {
            "Application": "HealthMonitor-api"
        }
    },
    "HealthCheckHostedService": {
        "Name": "{{Service:Name}}",
        "Enabled": true,
        "Interval": 5,
        "CacheDuration": 30,
        "Checks": [
            {
                "Name": "service1",
                "Type": "caching",
                "Required": false,
                "Value": "http://mockbin.org/bin/0fc13563-549c-47ce-a7cd-bdbe2caa0994",
                "Interval": 30,
                "Timeout": 5
            },
            {
                "Name": "service2",
                "Type": "caching",
                "Required": false,
                "Value": "http://mockbin.org/bin/0fc13563-549c-47ce-a7cd-bdbe2caa0994",
                "Interval": 30,
                "Timeout": 5
            }
        ]
    },
    "ApplicationInsights": {
        "InstrumentationKey": ""
    },
    "Seq": {
        "ServerUrl": ""
    },
    "Cors": {
        "Origins": [
            "http://*.cortside.local",
            "https://*.cortside.com",
            "https://*.cortside.com"
        ]
    },
    "Build": {
        "version": "1.0.0",
        "timestamp": "2020-11-22 03:20:39Z",
        "tag": "1.0-local",
        "suffix": "local"
    }
}
